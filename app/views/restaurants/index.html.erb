  <h1 class="mb-4 fw-bold">My Restaurants <span>🍕🍔</span></h1>

  <div class="row row-cols-1 row-cols-md-2 g-4 mb-4">
    <% @restaurants.each do |restaurant| %>
      <div class="col">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-dark" %>
            </h5>
            <p class="card-text text-muted">
              📍 <%= restaurant.address %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<%= link_to "Create new restaurant", new_restaurant_path, class: "btn btn-primary text-white text-decoration-none" %>
